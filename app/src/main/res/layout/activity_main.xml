<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/sortingModeGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Сортировать по:"
            android:textStyle="bold"
            android:textColor="@color/design_default_color_primary_dark"/>

        <RadioButton
            android:id="@+id/sortByName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Имени" />

        <RadioButton
            android:id="@+id/sortBySize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Размеру" />

        <RadioButton
            android:id="@+id/sortByTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Времени" />

        <Switch
            android:id="@+id/foldersFirstSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:checked="true"
            android:text="Сначала каталоги" />

        <ToggleButton
            android:id="@+id/reverseOrderSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:checked="false"
            android:textOff="Прямой порядок"
            android:textOn="Обратный порядок" />

    </RadioGroup>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="6dp"
                android:textSize="20sp"
                android:typeface="serif"
                tools:text="Вывод списка" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>